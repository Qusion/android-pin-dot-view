<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NumberDial">
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="backgroundColor" format="color" />
        <attr name="delimiterColor" format="color" />
        <attr name="verticalDelimiterWidth" format="dimension" />
        <attr name="horizontalDelimiterWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PinDotView">
        <attr name="pinLength" format="integer" />
        <attr name="idleDotSize" format="dimension" />
        <attr name="idleDotColor" format="color" />
        <attr name="activeDotColor" format="color" />
        <attr name="activeDotSizeModifier" format="float" />
    </declare-styleable>
</resources>